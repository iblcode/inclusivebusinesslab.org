      // b first!
      if ( b.date == null || b.date == '' ) { return 1 }
      // a first!
      if ( a.date == null || a.date == '' ) { return -1 }
      // a first! (greater date)
      if ( a.date > b.date) { return -1 }
      // b first! (greater date)
      if ( b.date > a.date ) { return 1 }
      return 0;
