each m in fields.teamMembers
  //- id, image, name, content
  - var production = (process.env.PENGUIN_ENV === 'production')
  
  li
    .team-member
      span.tm-img(style=`background-image: url(${m.image})`)
      strong !{m.name}
    .member-info
      p !{m.content}
      span.btn.btn-alt.btn-medium Read more
      unless production
        a.btn.btn-alt.btn-medium(href=`/${language}/team/${m.id}`) Edit
