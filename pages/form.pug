extends /includes/base

block nav
  nav#top-menu
    .lang-selector(data-component='LangSelector')
      span.current-language
        span.icon-globus
        span(data-show) English
      ul
        li
          a(href='/en' data-selector='en') English
        li
          a(href='/cn' data-selector='cn') Chinese

  
block content
  section#hero(style='height: 350px;')
    .hero-layer.paralax(style='background-image: url(/static/img/hero.contact.jpg)' data-component='BgImage' data-props={field:'hero', defaultURL:'/static/img/hero.contact.jpg'})
    .hero-layer.hero-layer-text.penguin-bg-image-sibling
      .hero-layer-text-v.active
        .wrapper3
          h1.bg-title.penguin-sp
            span.orange(data-component='Inplace' data-props={field:'title'}) Inclusive Business Lab
            
            
  .wrapper3.pt-120.pb-90#authenticate
    .hello.hello-inner.text2
      h2(data-component='Inplace' data-props={field:'authenticate-h2'}) Please authenticate yourself
      //- p(data-component='Inplace' data-props={field:'success-p'}) Please provide your User ID or registered Email:
      br
      .form-group(style='text-align: center; ')
        label(for="authenticate_input" data-component='Inplace' data-props={field:'authenticate_label'}) Please provide your User ID or registered Email:
        input.form-control#authenticate_input

      br
      button.btn(data-component='FormAuth') Proceed
      br
      small: a(href='javascript:;' data-component='FormRegistered') Not registered? Click here!
                  
                  
            
  form.wrapper3.pt-120.pb-90#signup(style='display: none;')
    .hello.hello-inner.text2(data-component='MediumEditor' data-props={field:'content'})
      p
        | Hello! To get started fill in your city and school!
    .hello.hello-inner.text2(style='padding-top: 15px;')
      
      .form-group
        //- label surname
        input.form-control(name="surname" required type='hidden')
      .form-group
        //- label residence
        input.form-control(name="residence" required type='hidden')
      .form-group
        //- label location
        input.form-control(name="location" required type='hidden')
      .form-group
        //- label education
        input.form-control(name="education" required type='hidden')
      
      .form-group
        label(for="country" data-component='Inplace' data-props={field:'country_label'}) Country
        select.form-control(name="country" data-component='FormOptionList' data-props={query:'/country'})#country
          option(value="") Loading...
      
      .form-group
        label(for="city" data-component='Inplace' data-props={field:'city_label'}) City
        select.form-control(name="city" data-component='FormOptionList' data-props={query:'/city'})#city
          option(value="") Loading...
          
      .form-group
        label(for="school" data-component='Inplace' data-props={field:'school_label'}) School
        select.form-control(name="school" data-component='FormOptionList' data-props={query:'/school'})#school
          option(value="") Loading...
          
      //- .form-group
      //-   label(for="school" data-component='Inplace' data-props={field:'school_label'}) School
      //-   select.form-control(data-component='FormListSchool' data-props={query:'/schools', filter: 'city'})#school
      //-     option(value="") Select your city!
      
      .form-group
        label(for="name" data-component='Inplace' data-props={field:'name_label'}) Name
        input.form-control#name(name="name" required)
          
      .form-group
        label(for="cnname" data-component='Inplace' data-props={field:'cnname_label'}) Chinese Name (optional)
        input.form-control#cnname(name="cnname")
          
      .form-group
        label(for="sex" data-component='Inplace' data-props={field:'sex_label'}) Gender
        br
        label Male&nbsp;
          input(type="radio" name="sex" value="M" required)
        br
        label Female&nbsp;
          input(type="radio" name="sex" value="F")
        
      .form-group
        label(for="birth" data-component='Inplace' data-props={field:'birth_label'}) Date of Birth
        input.form-control#birth(required name="birth")
          
      .form-group
        label(for="age" data-component='Inplace' data-props={field:'age_label'}) Age
        input.form-control#age(required name="age" type="number" min="0" step="1")
          
      .form-group
        label(for="email" data-component='Inplace' data-props={field:'email_label'}) Email Address
        input.form-control#email(required name="email" type="email")
          
      .form-group
        label(for="mobile" data-component='Inplace' data-props={field:'mobile_label'}) Mobile Number
        input.form-control#mobile(required name="mobile")
          
          
    .hello.hello-inner#action
      input.btn(type="submit" data-component='Form' data-props={field:'send'} value="Register")
      .spinner#spinner(style='margin: 20px auto; display: none')
        .double-bounce1
        .double-bounce2
      
            
  .wrapper3.pt-120.pb-90#success(style='display: none;')
    .hello.hello-inner.text2
      h2(data-component='Inplace' data-props={field:'success-h2'}) REGISTERED SUCCESSFULLY
      p(data-component='Inplace' data-props={field:'success-p'}) Please remember your registered information:
      br
      p
        span User ID:
        br
        strong#userid
      br
      p
        span Email Address:
        br
        strong#useremail
          
    .hello.hello-inner
      button.btn#proceed Proceed to Questionnaire
        
        
  .wrapper3.pt-120.pb-90
    .hello.hello-inner.text2(data-component='MediumEditor' data-props={field:'content2'})
      p
        | For problems and general inquires, please contact us at:
        br
        a(href='mailto:office@inclusivebusinesslab.org') office@inclusivebusinesslab.org
              

        
block styles
  style.
    .form-control {
      display: block;
      width: 100%;
      height: 34px;
      padding: 6px 12px;
      font-size: 14px;
      line-height: 1.42857143;
      color: #555;
      background-color: #fff;
      background-image: none;
      border: 1px solid #ccc;
      border-radius: 4px;
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
      box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
      -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
      -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
      transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    }
    .pb-60 {
      padding-bottom: 60px !important;
    }
    
    @-webkit-keyframes sk-bounce {
      0%, 100% { -webkit-transform: scale(0.0) }
      50% { -webkit-transform: scale(1.0) }
    }

    @keyframes sk-bounce {
      0%, 100% {
        transform: scale(0.0);
        -webkit-transform: scale(0.0);
      } 50% {
        transform: scale(1.0);
        -webkit-transform: scale(1.0);
      }
    }
      
    .spinner {
      width: 40px;
      height: 40px;

      position: relative;
      margin: 100px auto;
    }

    .double-bounce1, .double-bounce2 {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background-color: #333;
      opacity: 0.6;
      position: absolute;
      top: 0;
      left: 0;

      -webkit-animation: sk-bounce 2.0s infinite ease-in-out;
      animation: sk-bounce 2.0s infinite ease-in-out;
    }

    .double-bounce2 {
      -webkit-animation-delay: -1.0s;
      animation-delay: -1.0s;
    }
    .form-group {
      text-align:left;
      width:50%;
      margin-left: 25%;
      margin-top: 15px;
    }

