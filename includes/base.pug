doctype html
html
  head
    title IBL
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')

    include /includes/ico

    link(rel='stylesheet', type='text/css', href='/static/js/slick/slick.css')
    link(rel='stylesheet', type='text/css', href='/static/css/ui.css')
    link(rel='stylesheet', type='text/css', href='/static/css/style.css')

    block styles
      
    script(src='/static/js/jquery.min.js')
    script(src='/static/js/slick/slick.min.js')
    script(src='/static/js/isotope.pkgd.min.js')
    script(src='/static/js/packery-mode.pkgd.js')
    script(src='/static/js/script.js')
    script(src='/static/js/jquery.matchHeight-min.js')

  body
    div#container
      header#header
        .wrapper
          block nav
            nav#top-menu
              //- a(data-component='Link' data-props={href:'/feedback'})
              //-     span.icon-comment
              //-     | Feedback
              //- a(data-component='Link' data-props={href:'/resources'})
              //-     span.icon-download
              //-     | Resources
              block language
                .lang-selector(data-component='LangSelector')
                  span.current-language
                    span.icon-globus
                    span(data-show) English
                  ul
                    li
                      a(href='/en' data-selector='en') English
                    li
                      a(href='/cn' data-selector='cn') Chinese
            section#header-main
              a#logo(data-props={href:'/'} data-component='Link') Inclusive Business Lab
              nav#main-menu
                ul
                  li(data-component='BaseLink' data-props={field:'global-footer-link-strategies', defaultURL:'/strategies'}) Strategies
                  li(data-component='BaseLink' data-props={field:'global-footer-link-stories', defaultURL:'/stories'}) Stories
                  li(data-component='BaseLink' data-props={field:'global-footer-link-team', defaultURL:'/team'}) The Team
                  li(data-component='BaseLink' data-props={field:'global-footer-link-contact', defaultURL:'/contact'}) Contact
                
                
    block content

    include /includes/cms
    
    block footer
      footer#footer
        .wrapper
          nav
            a(data-component='LinkEditor' data-props={field:'global-footer-link-strategies', defaultURL:'/{{lang}}/strategies'}) Strategies
            a(data-component='LinkEditor' data-props={field:'global-footer-link-stories', defaultURL:'/{{lang}}/stories'})  Stories
            a(data-component='LinkEditor' data-props={field:'global-footer-link-team', defaultURL:'/{{lang}}/team'})  The Team
            a(data-component='LinkEditor' data-props={field:'global-footer-link-contact', defaultURL:'/{{lang}}/contact'})  Contact
          a#footer-logo(data-component='Link' data-props={href:'/'})
          address#copy
            | Inclusive Business Lab &
            br
            | Inclusive Business Foundation
